<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/other_view"
    tools:context="vennsroadacc.vennsroadacc.Other_Vehicle">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtDriverName_Other"
            android:layout_weight="0.08"
            android:hint="Driver Name"
            android:inputType="text"
            android:textSize="15sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="Identity number"
            android:id="@+id/txtIdNumber_Other"
            android:layout_weight="0.08"
            android:inputType="number"
            android:textSize="15sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="Resident Address"
            android:id="@+id/txtResidentAddress_Other"
            android:layout_weight="0.08"
            android:inputType="textMultiLine"
            android:textSize="15sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="Work Tel Number"
            android:id="@+id/txtWorkTelNo_Other"
            android:layout_weight="0.08"
            android:inputType="number"
            android:textSize="15sp"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtHomeTelNo_Other"
            android:hint="Home Tel Number"
            android:layout_weight="0.08"
            android:inputType="number"
            android:textSize="15sp"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtRegistrationNo_Other"
            android:hint="Registration Number"
            android:layout_weight="0.08"
            android:inputType="text"
            android:textSize="15sp"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtMakeModel_Other"
            android:hint="Make Model"
            android:layout_weight="0.08"
            android:inputType="text"
            android:textSize="15sp"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtOwner_Other"
            android:hint="Owner"
            android:layout_weight="0.08"
            android:inputType="number"
            android:textSize="15sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtLicenceNo_Other"
            android:hint="Licence Number"
            android:layout_weight="0.08"
            android:inputType="text"
            android:textSize="15sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtLicenceExpiryDate_Other"
            android:hint="Licence Expiry Date"
            android:layout_weight="0.08"
            android:inputType="date"
            android:textSize="15sp"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtCode_Other"
            android:hint="Code"
            android:layout_weight="0.08"
            android:inputType="text"
            android:textSize="15sp"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnTo_Other"
            android:layout_weight="0.08"
            android:hint="Proceed"
            android:onClick="ToCollision"
            />

    </LinearLayout>
</RelativeLayout>
